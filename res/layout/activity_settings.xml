<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity" >

    <Button
        android:id="@+id/getRampTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:onClick="getRampTime"
        android:text="@string/rampTime" />

    <Button
        android:id="@+id/sweepType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/getRampTime"
        android:onClick="getSweepType"
        android:text="@string/sweepType" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/getRampTime" >

        <Button
            android:id="@+id/setRampTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="setRampTime"
            android:text="@string/setRampTime" />
        
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textIsSelectable="true" />

        <Button
            android:id="@+id/send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="72dp"
            android:onClick="send"
            android:text="@string/send2" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/captureTimeOptions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/captureTime"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/captureTimeSetting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/currentSetting"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <SeekBar
            android:id="@+id/seekBar1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="10000"
            android:progress="5000" />

        <TextView
            android:id="@+id/progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:visibility="visible" />
    </LinearLayout>
    
</RelativeLayout>