    <TextView
        android:id="@+id/captureTimeSetting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"   
        android:layout_marginTop="101dp"
        android:text="@string/currentSetting"
        android:textAppearance="?android:attr/textAppearanceMedium" />

<!-- android:layout_below="@+id/BTswitch" -->    
    
    <TextView
        android:id="@+id/captureTimeOptions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/captureTimeSetting"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="30dp"
        android:text="@string/captureTime"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
	<SeekBar
        android:id="@+id/seekBar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/bandwidthSetting"
        android:max="10000"
        android:progress="5000" />
    
	<TextView
	    android:id="@+id/progress"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/seekBar1"
	    android:textAppearance="?android:attr/textAppearanceMedium"
	    android:visibility="visible" />

    <Button
        android:id="@+id/readState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="readState"
        android:text="@string/readState" />

    <Button
        android:id="@+id/captureTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/captureTimeSetting"
        android:onClick="getDefaultValues"
        android:text="@string/changeCaptureTime" />

    <TextView
        android:id="@+id/bandwidthOptions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/captureTime"
        android:layout_marginTop="30dp"
        android:text="@string/bandwidthSetting"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/bandwidthSetting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/bandwidthOptions"
        android:text="@string/currentSetting"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/currentCapture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/progress"
        android:text="@string/currentCaptureTime"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/readState"
        android:layout_below="@+id/seekBar1"
        android:orientation="horizontal" >

        <ListView
            android:id="@+id/in"
            android:layout_width="wrap_content"
            android:layout_height="416dp"
            android:layout_weight="1"
            android:stackFromBottom="true"
            android:transcriptMode="alwaysScroll"
             android:layout_above="@+id/layout" >
        </ListView>
		<LinearLayout
		    android:id="@+id/layout"
		    android:orientation="horizontal"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/in"
	        >
	        <EditText android:id="@+id/edit_text_out"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:layout_gravity="bottom"
	            android:layout_below="@+id/in"
	        />
	        <Button android:id="@+id/button_send"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/send"
	            android:layout_below="@+id/in"
	        />
	    </LinearLayout>
	 </LinearLayout>

</RelativeLayout>
	

