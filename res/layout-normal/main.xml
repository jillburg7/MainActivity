<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <LinearLayout
        android:id="@+id/button_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" >

        <Button
            android:id="@+id/start"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:onClick="startCollect"
            android:text="@string/start"
            android:textSize="15sp" />

        <Button
            android:id="@+id/stop"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:onClick="stopCollect"
            android:text="@string/stop"
            android:textSize="15sp" />

        <Button
            android:id="@+id/button_load"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:onClick="openArchive"
            android:text="@string/load_data"
            android:textSize="15sp" />
        <!-- <Button 
            android:id="@+id/reset"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="@string/reset"
            android:textSize="15sp"
            android:onClick="resetButton" /> -->
    </LinearLayout>

    
<!-- aChartEngine -->
    
    <RelativeLayout
        android:id="@+id/chart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_group"
        android:orientation="vertical" >
    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/plotButtonGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true" >

        <Button
            android:id="@+id/plot_button"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:onClick="plotButton"
            android:text="@string/plot_data"
            android:textSize="14sp" />

        <Button
            android:id="@+id/plotFFT_button"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:onClick="plotFFT"
            android:text="@string/plot_FFT"
            android:textSize="14sp"  />
        
        <Button
	        android:id="@+id/button_save"
	        android:layout_width="wrap_content"
	        android:layout_height="35dp"
	        android:onClick="saveFile"
	        android:text="@string/save_data"
	        android:textSize="14sp"  /> 
    </LinearLayout>
    
	

</RelativeLayout>